<!-- views/searchUser.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <%- include("partials/errors.ejs") %>

    <form action="/searchUser/results" method="post">
      <label for="searchUser">Search by Name: </label>
      <input type="text" name="searchUser" id="searchUser" required />
      <button type="submit">Search</button>
    </form>

    <% if (users && users.length > 0) { %>
    <h2>Search Results:</h2>
    <ul>
      <% users.forEach(function(user) { %>
      <li>
        ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %><br />
        Email: <%= user.userMail %>, Age: <%= user.userAge %><br />
        Bio: <%= user.userBio %>
      </li>
      <% }); %>
    </ul>
    <% } else if (users) { %>
    <p>No users found.</p>
    <% } %>

    <a href="/">Back to home</a>
  </body>
</html>
